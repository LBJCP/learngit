    insert into voice_shoplist (userid, shopitem, `time`, 
      delflg)
    values (#{userid,jdbcType=VARCHAR}, #{shopitem,jdbcType=VARCHAR}, #{time,jdbcType=BIGINT}, 
      #{delflg,jdbcType=INTEGER})
  </insert>

</mapper>